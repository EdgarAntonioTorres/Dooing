<?xml version="1.0" encoding="UTF-8"?>
<phpunit bootstrap="vendor/autoload.php"
         colors="true"
         stopOnFailure="false">
    <testsuites>
        <testsuite name="Test Suite">
            <directory suffix="Test.php">./tests</directory>
        </testsuite>
    </testsuites>
    <coverage processUncoveredFiles="true">
        <include>
            <directory suffix=".php">./clases</directory>
            <directory suffix=".php">./procesos</directory>
        </include>
        <report>
            <clover outputFile="build/logs/clover.xml"/>
            <html outputDirectory="build/coverage"/>
            <text outputFile="build/coverage.txt"/>
        </report>
    </coverage>
    <php>
        <env name="APP_ENV" value="testing"/>
        <env name="DB_CONNECTION" value="mongodb"/>
        <env name="DB_HOST" value="localhost"/>
        <env name="DB_PORT" value="27017"/>
        <env name="DB_DATABASE" value="todo_app_test"/>
        <env name="DB_USERNAME" value="mongoadmin"/>
        <env name="DB_PASSWORD" value="123456"/>
    </php>
</phpunit>